generator client {
  provider = "prisma-client-js"
}

// prisma/schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum AttStatus {
  ABSENT
  PRESENT
}

enum UserRole {
  EMPLOYEE
  MANAGER
  OWNER
}

enum Role {
  OWNER
  MANAGER
}

model User {
  id         String       @id @default(cuid())
  name       String?
  email      String?      @unique
  password   String?
  position   UserRole     @default(EMPLOYEE)
  address    String?
  phone      String?
  salary     Int?
  salaryPaid Int?
  attendance Attendance[]
  createdAt  DateTime     @default(now())
}

model Attendance {
  id     String    @id @default(cuid())
  user   User      @relation(fields: [userId], references: [id])
  userId String
  year   Int
  month  Int
  day    Int
  status AttStatus @default(ABSENT)
}

model Notice {
  id          String   @id @default(cuid())
  subject     String
  description String
  role        Role     @default(MANAGER)
  forWho      UserRole @default(EMPLOYEE)
  createdAt   DateTime @default(now())
}

model ForgotPasswordToken {
  id        String   @id @default(cuid())
  token     String   @unique
  email     String
  expiry    DateTime
  createdAt DateTime @default(now())
}


model Bill {
  id          String   @id @default(uuid())
  partyName   String
  address     String
  billNo      String   @unique
  items       Item[]
  totalAmount Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Item {
  id          String   @id @default(uuid())
  quantity    Int
  productName String
  hsnCode     String
  gst         Float
  rate        Float
  gstAmount   Float
  total       Float
  bill        Bill     @relation(fields: [billId], references: [id], onDelete: Cascade)
  billId      String
}

